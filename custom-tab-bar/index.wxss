/* custom-tab-bar/index.wxss */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 64px;
  background-color: rgba(252,253,255,255); 
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0px 0px 12px 0px rgba(240, 240, 240, 0.7);


  z-index: 1;
}
