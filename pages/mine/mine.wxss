/* pages/mine/mine.wxss */
page{
  background-color: rgba(252,253,255,255);
}
.user-info{
  width: 100%;
  height: 160px;
  display: flex;
}
p{
  color: #363636;
}
.user-info__content{
  display: flex;
  flex-flow: column;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  border-bottom-right-radius: 10em 2em;
  border-bottom-left-radius: 10em 2em;
  background-color: #F2F7FA;
  padding-top: 16px;
}
.user-info__content::after{
  border: none;
}
.user-info__content image{
  width: 64px;
  height: 64px;
  background-color: #eee;
  border-radius: 50%;
}
.user-info__content p{
  font-weight: 500;
  font-size: 12pt;
  margin-top: 8px;
}
.user-service__content{
  margin-top: 12px;
  width: 100%;
}
.user-service__list navigator{
  width: 100%;
  box-sizing: border-box;
  padding-left: 5%;
}
.user-service__item{
  position: relative;
  display: flex;
  flex-flow: row;
  align-items: center;
  width: 90%;
  padding: 20px 0;
  border-bottom: 1px solid #F2F7FA;
  font-size: 10pt;
  font-weight: 500;
}
.user-service__item image:nth-of-type(1){
  width: 24px;
  height: 24px;
  order: 1;
  margin-right: 20px;
}
.user-service__item p{
  order: 2;
}

.user-service__item image:nth-of-type(2){
  position: absolute;
  right: 0;
  width: 12px;
  height: 12px;
  background-color: transparent;
  order:3;
}