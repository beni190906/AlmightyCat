.container{

}
.normal-shadow{
  box-shadow: 0px 0px 12px 0px rgba(240, 240, 240, 0.7);
}
.header{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.banner{
  width: 100%;
  height: 360rpx;
}
swiper{
  height: 100%;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.content{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24px 0;
  width: 100%;
  background-size:100% 100%;
  background-position: center center;
  /* background-image: url(images/background.jpg); */
}
.post-need{
  width: 80%;
  position: sticky;
  border-radius: 5px;
  box-shadow:0px 0px 3px 0px rgba(19, 132, 231, 0.75);
}
.post-need__btn{
  background-color: #2784e7;
  color: #ffffff;

}
.service-list{
  width: 90%;
  margin-top: 20px; 
  border-radius: 10px;
  background-color: #fff;
}
.service-list>ul{
  display: flex;
  flex-flow:row wrap;
  align-items: center;
  width: 95%;
  padding: 2.5%;
}
.service-list__item{
  display: flex;
  flex-flow: column wrap;
  align-items: center;
  box-sizing: border-box;
  padding: 36rpx;
  width: 33.333333%;
}
.service-list__item>p{
  font-family: 'Noto Sans TC';
  order: 2;
}
.service-list__item>image{
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  padding-bottom: 16rpx;
  order: 1;
}
.bg-test{
  z-index: -1;
  position: absolute;
  width: 100%;
  height: 800px;
  top: 0;
  left: 0;
  background-color: rgba(252,253,255,255);
}
.swiper-indicators{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 12px;
}
.swiper-indicator{
  width: 10px;
  height: 3px;
  transition: background-color .3s ease-in-out;
  margin: 0 5px;
  border-radius: 5px;
}
.swiper-indicator--passive{
  width: 12px;
  background-color: #ddd;
}
.swiper-indicator--active{
  width: 18px;
  background-color: #000;
}